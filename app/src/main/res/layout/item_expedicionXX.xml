<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:background="#ddd">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/lay_item_expedicion"
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
            android:padding="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/etiquetasCuadro"
                        android:text="Serie"/>
                    <TextView
                        android:id="@+id/tv_mov_stock_serie"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="left"
                        style="@style/datosCuadros"
                        android:text="EXP"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            style="@style/etiquetasCuadro"
                            android:text="Documento"/>
                        <TextView
                            android:id="@+id/tv_mov_stock_documento"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            style="@style/datosCuadros"
                            android:gravity="left"
                            android:text="52265956"/>
                        </LinearLayout>
                    </LinearLayout>

                <LinearLayout
                    android:layout_weight="2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/etiquetasCuadro"
                        android:text="Total"/>
                    <TextView
                        android:id="@+id/tv_mov_stock_unidades_total"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="left"
                        style="@style/datosCuadros"
                        android:text="18"
                        />
                    </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"

                        >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                style="@style/etiquetasCuadro"
                                android:text="MatrÃ­cula"/>
                            <TextView
                                android:id="@+id/tv_mov_stock_matricula"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                style="@style/datosCuadros"
                                android:gravity="left"
                                android:text="5526 BCC"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            style="@style/etiquetasCuadro"
                            android:text="Remolque"/>
                        <TextView
                            android:id="@+id/tv_mov_stock_matricula_remolque"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="left"
                            style="@style/datosCuadros"
                            android:text="R-456454"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"

                            >

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    style="@style/etiquetasCuadro"
                                    android:text="Conductor"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:layout_weight="1"
                                        android:id="@+id/tv_mov_stock_matricula"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        style="@style/datosCuadros"
                                        android:gravity="left"
                                        android:text="Jose Antonio del Rio"/>
                                    <ImageButton
                                        android:background="@color/white"
                                        android:layout_weight="5"
                                        android:id="@+id/btn_asignar_chofer"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"

                                        android:src="@drawable/ic_action_edit"
                                        />
                                    </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>



                </LinearLayout>

    </LinearLayout>
</LinearLayout>