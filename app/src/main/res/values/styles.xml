<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="BtnInit">
        <item name="android:padding">5dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="EtiquetaContadores">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#054657</item>
        <item name="android:layout_weight">0.33</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="EtiquetaComentarios">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#054657</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="TxtContadorAnterior">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.33</item>
        <item name="android:editable">false</item>
    </style>

    <style name="TxtContadorActual">
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.33</item>
        <item name="android:inputType">number</item>
        <item name="android:numeric">integer</item>
    </style>

    <style name="EditTextContadores">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EtiquetaSeparador">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="EtiquetaTitulo">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    
    <style name="EtiquetaLeft">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TxtImportes">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:selectAllOnFocus">true</item>
        <!--<item name="android:numeric">decimal</item>-->
    </style>

    <style name="TxtImportesBloq">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:editable">false</item>
    </style>

    <style name="TxtDate">
        <item name="android:maxLength">10</item>
        <item name="android:editable">false</item>
        <item name="android:text">"2014-04-01 00:00:00.0"</item>
    </style>

    <style name="TvDate">
        <item name="android:maxLength">10</item>
        <item name="android:text">"2014-04-01 00:00:00.0"</item>
    </style>

    <style name="EtiquetaTotalesAll">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#054657</item>
        <item name="android:layout_weight">0.33</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TxtImportesBloqAll">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:editable">false</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TxtLayTotalesAll">
        <item name="android:paddingBottom">2dp</item>
    </style>
    <style name="datosCuadros">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="etiquetasCuadro">
        <item name="android:gravity">left</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="layoutButtonText">
        <item name="android:textSize">25dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="layoutButton">
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/lay_button</item>
        <item name="android:onClick">onClickLayout</item>
    </style>
</resources>
